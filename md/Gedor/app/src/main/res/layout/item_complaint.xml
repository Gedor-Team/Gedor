<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    android:layout_marginBottom="12dp"
    android:backgroundTint="@color/secondaryContainer"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_date_created"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            android:textColor="@color/onSecondaryContainer"
            tools:text="28 November 20224"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_status_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_date_created"
            android:textStyle="bold"
            android:textColor="@color/onSecondaryContainer"
            android:text="Status:"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tv_status_label"
            app:layout_constraintTop_toTopOf="@id/tv_status_label"
            android:layout_marginStart="5dp"
            android:id="@+id/tv_status"
            android:textStyle="bold"
            android:textColor="@color/onSecondaryContainer"
            tools:text="In progress"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:id="@+id/tv_complaint"
            app:layout_constraintTop_toBottomOf="@id/tv_status_label"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:maxLines="3"
            android:ellipsize="end"
            tools:text="@tools:sample/lorem/random"
            android:textColor="@color/onSecondaryContainer"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>